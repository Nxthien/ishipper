<% @shippers.serializable_hash.each do |shipper| %>
  <tr>
    <td>
      <div class="hatd-avatar">
        <%= image_tag avatar_profile(current_user.avatar.url), class: "img-responsive" %>
      </div>
    </td>
    <td><%= shipper[:name] %></td>
    <td><%= shipper[:plate_number] %></td>
    <td><%= shipper[:number_finished_invoice] %>/<%= shipper[:number_all_invoice] %></td>
    <td>
      <div class="dropdown">
        <button class="dropdown-toggle btn hatd_dropdown_toggle_<%= shipper[:favorite_user] %>" data-toggle="dropdown">
          <b><%= t "users.#{shipper[:favorite_user]}" %></b>
          <b class="caret"></b>
        </button>

        <ul class="dropdown-menu">
          <% shipper[:actions].keys.each do |action| %>
              <%= form_tag "shop/shippers/#{shipper[:id]}", method: :patch, remote: true do %>
                <li class="hatd-shipper-content-li">
                  <label class="hatd-shipper-content-label">
                    <%= hidden_field_tag :action_type, action %>
                    <%= hidden_field_tag :current_type, @current_type %>
                    <%= submit_tag t("users.shipper_action.#{action}"), class: "hatd-shipper-content-submit" %>
                  </label>
                </li>
              <% end %>
          <% end %>
        </ul>
      </div>
    </td>
  </tr>
<% end %>
