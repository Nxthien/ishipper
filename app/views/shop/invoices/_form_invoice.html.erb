<div class="td-invoice-box">
  <div class="td-invoice-content">
    <div class="td-invoice-content-left">
      <p class="text-center">
        <%= t "invoices.index.ship_price" %>
      </p>
      <p class="text-center td-color">
        <%= number_to_currency invoice.shipping_price %>
      </p>
    </div>
    <div class="td-invoice-content-right">
      <div class="td-line">
        <i class="fa fa-circle-o td-circle-first td-color"
          aria-hidden="true"></i>
        <i class="fa fa-circle-o td-circle-second td-color"
          aria-hidden="true"></i>
      </div>

      <div class="td-invoice-content-right-detail">
        <p class="td-invoice-address-top"><%= invoice.address_start %></p>
        <p class="td-invoice-address-bottom"><%= invoice.address_finish %></p>
        <div class="clearfix"></div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="td-invoice-content-2">
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 invoice_node">
      <p class="td-text-top text-center">
        <%= t "invoices.distance" %>
      </p>
      <p class="td-text-bottom text-center t-hot-main">
        <%= invoice.distance_invoice %> <%= t "invoices.km" %>
      </p>
    </div>

    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 invoice_node">
      <p class="td-text-top text-center">
        <%= t "invoices.delivery_time" %>
      </p>
      <p class="td-text-bottom text-center t-hot-main">
        <%= invoice.delivery_time %>
      </p>
    </div>

    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 invoice_node">
      <p class="td-text-top text-center">
        <%= t "invoices.cost" %>
      </p>
      <p class="td-text-bottom text-center t-hot-main">
        <%= number_to_currency invoice.price %>
      </p>
    </div>
  </div>
  <div class="clearfix"></div>
  <% if invoice.init? %>
    <div class="nht-btn-list-shippers">
      <%= link_to shop_list_shippers_path(invoice_id: invoice.id),
        class: "btn btn-primary" do %>
        <i class="glyphicon glyphicon-gift" ></i>
        <%= t "invoices.list_shippers" %>
      <% end %>
    </div>

  <% end %>
</div>
