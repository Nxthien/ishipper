close_loading_after();
<% if @q %>
  attribute = '<%= @q[:attribute] %>';
  sortable = '<%= @q[:sortable] %>';
<% end %>
<% if @load_more %>
  $('#nht-table-invoice-content').append('<%= j render "invoice_content" %>');
<% else %>
  if ($('#id-nht-invoices-index').is(':visible')) {
    $('#nht-table-invoices').html('<%= j render "invoice_table" %>');
  } else {
    $('#id-nht-invoices-index').html('<%= j render "invoice_index" %>').modal(
      {backdrop: 'static', keyboard: false, show: true});
    $list_invoice_page = 1;
    on_load_more_invoice();
  }
<% end %>
showInvoicesDetail();
reverseSortable();

$on_load_invoice = false;

function reverseSortable() {
  sortable = (sortable == 'ASC' ? 'DESC' : 'ASC');
  $('#' + attribute).val(sortable);
}
