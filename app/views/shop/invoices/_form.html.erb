<%= form_for [:shop, @invoice], remote: true do |f| %>
  <div  class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
    <div class="row" id="form_invoice_map_marker">
      <div id="map" class="col-md-12"></div>
      <div class="nht-after_map">
        <% Settings.invoice.invoice_attributes.each do |attribute| %>
          <%= f.hidden_field attribute, id: Settings.invoice.send(attribute) %>
        <% end %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="row">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-map-marker nht-marker-start" aria-hidden="true"></i>
              </span>
              <%= f.text_field :address_start, class: "form-control nht-fix-input",
                placeholder: t("invoices.enter_address_start"), id: "map-address0" %>
              <div class="clearfix"></div>
            </div>

            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-map-marker nht-marker-finish" aria-hidden="true"></i>
              </span>
              <%= f.text_field :address_finish, class: "form-control nht-fix-input",
                placeholder: t("invoices.enter_address_finish"), id: "map-address1" %>
              <div class="clearfix"></div>
            </div>

            <div class="input-group">
              <span class="input-group-addon">
                <%= image_tag "distance.png", id: "distance" %>
              </span>
              <span class="nht-invoice-distance-content"><%= t "invoices._distance" %>:
                <%= f.text_field :distance_invoice, readonly: true,
                  id: "distance_invoice" %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
    <div id="form_invoice_info">
      <div class="form-new-invoice">
        <%= render "shared/error_messages", object: @invoice %>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-shopping-bag" aria-hidden="true"></i>
          </span>
          <%= f.text_field :name, class: "form-control td-fix-input",
            placeholder: t("invoices.name") %>
          <span class="input-group-addon nht-unit">
          </span>
        </div>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-balance-scale" aria-hidden="true"></i>
          </span>
          <%= f.text_field :weight, class: "form-control td-fix-input",
            placeholder: t("invoices.weight") %>
          <span class="input-group-addon nht-unit">
            <i><%= t :kg %></i>
          </span>
        </div>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-dollar" aria-hidden="true"></i>
          </span>
          <%= f.text_field :price, class: "form-control td-fix-input",
            placeholder: t("invoices.price") %>
          <span class="input-group-addon nht-unit">
            <i><%= t :vnd %></i>
          </span>
        </div>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-dollar" aria-hidden="true"></i>
          </span>
          <%= f.text_field :shipping_price, class: "form-control td-fix-input",
            placeholder: t("invoices.shipping_price") %>
          <span class="input-group-addon nht-unit">
            <i><%= t :vnd %></i>
          </span>
        </div>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-clock-o" aria-hidden="true"></i>
          </span>
          <%= f.text_field :delivery_time, class: "form-control td-fix-input",
            placeholder: t("invoices.delivery_time") %>
        </div>

        <h2 class="diamond"><%= t "invoices.customer" %></h2>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-user" aria-hidden="true"></i>
          </span>
          <%= f.text_field :customer_name, class: "form-control td-fix-input",
            placeholder: t("invoices.customer_name") %>
        </div>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-phone" aria-hidden="true"></i>
          </span>
          <%= f.text_field :customer_number, class: "form-control td-fix-input",
            placeholder: t("invoices.customer_number") %>
        </div>

        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-edit" aria-hidden="true"></i>
          </span>
          <%= f.text_field :description, class: "form-control td-fix-input",
            placeholder: t("invoices.description") %>
        </div>

        <div class="nht-btn-invoice">
          <%= f.submit t(:_create), class: "td-fix-button-1" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
