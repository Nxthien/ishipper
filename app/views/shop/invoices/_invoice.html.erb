<div class="lvc-invoice modal-dialog">
  <div class="modal-content">
    <div class="lvc-invoice-title base-color">
      <div class="back">
        <button type="button" class="btn-back reload-data" data-toggle="modal"
          data-target="#id-nht-invoices-index">
          <i class="fa fa-arrow-circle-left nht-icon" aria-hidden="true"></i>
        </button>
      </div>
      <div class="lvc-invoice-status">
        <%= t "invoices._info_invoice" %>
      </div>
      <%= link_to "#", data: {dismiss: "modal"}, class: "close" do %>
        <i><%= image_tag "cut.png" %></i>
      <% end %>
      <div class="clearfix"></div>
    </div>
      <table class="table show_table_invoice">
        <tbody class="lvc-invoice-table-body">
          <tr>
            <td class="lvc-column-less"><%= t "invoices.name_invoice" %></td>
            <td class="lvc-column-big"><%= invoice.name.capitalize %></td>
            <td class="lvc-column-less"><%= t "invoices._shipping_price" %></td>
            <td class="lvc-column-big"><%= number_to_currency invoice.shipping_price %></td>
          </tr>
          <tr>
            <td ><%= t "invoices._number_customer" %></td>
            <td><%= invoice.customer_number %></td>
            <td><%= t "invoices._price" %></td>
            <td><%= number_to_currency invoice.price %></td>
          </tr>
          <tr>
            <td><%= t "invoices.address" %></td>
            <td><%= invoice.address_start %></td>
            <td><%= t "invoices._delivery_time" %></td>
            <td><%= invoice.delivery_time %></td>
          </tr>
          <tr>
            <td><%= t "invoices._name_customer" %></td>
            <td><%= invoice.customer_name.capitalize %></td>
            <td><%= t "invoices._description" %></td>
            <td><%= invoice.description %></td>
          </tr>
          <tr>
            <td><%= t "invoices._number_customer" %></td>
            <td><%= invoice.customer_number %></td>
            <td><%= t "invoices._delivery_time" %></td>
            <td><%= invoice.delivery_time %></td>
          </tr>
          <tr>
            <td><%= t "invoices.address" %></td>
            <td><%= invoice.address_finish%></td>
            <td><%= t "invoices._distance" %></td>
            <td><%= invoice.distance_invoice %> <%= t :km %></td>
          </tr>
        </tbody>
      </table>
    <div>
      <div class="show-invoice-action">
        <hr>
        <% unless invoice.finished? || invoice.cancel? %>
          <div class="finished">
            <% if invoice.shipped? %>
              <%= form_for [:shop, invoice], method: :patch, remote: true do |f| %>
                <%= hidden_field_tag :status, Settings.invoice.status[:finished] %>
                <%= f.submit t("invoices.update.finished"),
                  class: "btn btn-primary invoice-status-change" %>
              <% end %>
            <% end %>
          </div>
          <div id="">
            <%= form_for [:shop, invoice], method: :patch, remote: true do |f| %>
              <%= hidden_field_tag :status, Settings.invoice.status[:cancel] %>
              <%= f.submit t("invoices.cancel"),
                class: "btn btn-danger invoice-status-change" %>
            <% end %>
          </div>
        <% end %>

        <div id="lvc-report-invoice">
          <% if invoice.cancel? && !current_user.report?(invoice) %>
            <%= link_to t("report.title"), new_shop_report_path(invoice_id: invoice.id),
              remote: true, class: "btn btn-danger lvc-btn-report" %>
          <% end %>
          <div class="clearfix"></div>
        </div>

        <div id="lvc-rate-invoice-form">
          <% if invoice.finished? && !current_user.rate?(invoice) %>
            <%= link_to t("rate.title"), new_shop_rate_path(invoice_id: invoice.id),
              remote: true, class: "btn btn-primary lvc-btn-rate" %>
          <% end %>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        <div class="nht-invoice-rate">
          <% if current_user.rate? invoice %>
            <%= render "shop/rates/rate", rates: invoice.reviews.rate %>
          <% end %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<div id="report-modal" class="modal fade"></div>
<div id="rate-modal" class="modal fade"></div>

