<div class="modal-dialog">
  <div class="modal-content">
    <%= link_to "#", data: {dismiss: "modal"}, class: "close nht-shipper-close" do %>
      <i class="fa fa-times" aria-hidden="true"></i>
    <% end %>
    <div class="title">
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 nht-invoice-name">
        <span>
          <b><%= t "invoices._name" %></b>
          <%= truncate @supports.invoice.name, length: Settings.invoice.length_name %>
        </span>
      </div>

      <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 nht-invoice-address">
        <span>
          <b><%= t "invoices.from" %></b>
          <%= truncate @supports.invoice.address_start, length: Settings.invoice.length_address %>
        </span>

        <span>
          <b><%= t "invoices.to" %></b>
          <%= truncate @supports.invoice.address_finish, length: Settings.invoice.length_address %>
        </span>
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="nht-profile-shipper">
      <div class="col-xs-8 col-xs-offset-1 col-sm-8 col-sm-offset-1
        col-md-5 col-md-offset-0 col-lg-5 col-lg-offset-0 nht-user-left">
        <div class="nht-user-cover">
          <%= image_tag avatar_profile(@shipper.avatar.url), id: "nht-user-avatar",
            class: "img-responsive" %>

          <div class="nht-user-invoice">
            <div class="nht-user-sum-invoice">
              <%= t "users.sum_invoices" %>
            </div>
            <div class="nht-user-success-invoice">
              <%= t "users.success_invoices" %>
            </div>
          </div>

        </div>
        <div class="nht-user-info-left">
          <h1 class="nht-user_name">
            <%= @shipper.name %>
          </h1>
          <h4 class="nht-user_phone_number">
            <%= @shipper.phone_number %>
          </h4>
        </div>
      </div>

      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1
        col-md-7 col-md-offset-0 col-lg-7 col-lg-offset-0 nht-user-right">

        <div class="nht-user-rate">
          <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4
            nht-user-rate-left">
            <div class="nht-user-rate-content">
              <h1><%= @shipper.rate %></h1>
            </div>
            <div class="nht-user-rate-sum">
              <%= t "users.sum_rate", sum: @supports.sum_rate %>
            </div>
          </div>

          <div class="col-sm-8 col-xs-8 col-md-8 col-lg-8 nht-user-rate-right">
            <% Settings.rate.list_stars.each do |numstar| %>
              <div class="bar-content <%= numstar %>">
                <i class="fa fa-star star"><%= Settings.rate.send "load_#{numstar}_star" %></i>
                <span class="bar" data-id="<%= @supports.send "load_#{numstar}_star" %>">
                  <%= @supports.send "load_#{numstar}_star" %>
                </span>
                <div class="clearfix"></div>
              </div>
            <% end %>
          </div>
        </div>
        <hr>

        <div class="nht-user-info-right">
          <p class="td-p-flex">
            <i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal">
            </i>
            <span class="nht-user_role">
              <%= @shipper.role %>
            </span>
          </p>
          <p class="td-p-flex">
            <i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal">
            </i>
            <span class="nht-user_address">
              <%= @shipper.address %>
            </span>
          </p>
          <p class="td-p-flex">
            <i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal">
            </i>
            <span class="nht-user_email">
              <%= @shipper.email %>
            </span>
          </p>
            <p class="td-p-flex">
              <i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal">
              </i><%= @shipper.phone_number %>
            </p>
        </div>

        <div class="accept">
          <%= form_tag shop_user_invoice_path(@supports.user_invoice_id),
            method: :patch do %>
            <%= submit_tag t("invoices.accept_shipper.button"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
