<!DOCTYPE html>
<html>
  <head>
    <title><%= t :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
    <meta name="turbolinks-cache-control" content="no-cache">
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="nht-header">
        <%= render "layouts/sidebar" %>
      </div>
      <div class="w3-main td-nav-hide">
        <div class="nht-header">
          <%= render "layouts/header" %>
        </div>
        <%= render "layouts/body_form" %>
      </div>
    <% else %>
      <%= render "layouts/body_form" %>
    <% end %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAik8OVJ3_JisisBdw7aS20dQDt3lD1bG0&sensor=false&libraries=places&callback=initAutocomplete" data-turbolinks-eval="false" ></script>
  </body>
</html>
