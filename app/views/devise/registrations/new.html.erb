<section class="td-signin">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-7 col-xs-12 td-col-left">
        <h2 class="text-center"><%= t "devise.sign_up" %></h2>

        <%= form_for resource, as: resource_name,
          url: sign_up_path(resource_name) do |f| %>

          <div class="input">
            <%= f.label :phone_number %><br />
            <%= f.text_field :phone_number, autofocus: true,
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :email %><br />
            <%= f.email_field :email,
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :name %><br />
            <%= f.text_field :name,
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :current_location %><br />
            <%= f.text_field :current_location,
              class: "form-control signin-input", id: "current_location" %>
            <%= f.hidden_field :address,
              class: "form-control signin-input", id: "address" %>
          </div>

          <%= f.hidden_field :role, value: Settings.role %>

          <div class="input">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %><%= t "devise.character" %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off",
              class: "form-control signin-input" %>
          </div>

          <div class="actions">
            <%= f.submit t("devise.sign_up"),
              class: "hvr-pulse-shrink btn btn-primary", id: "create-button" %>
          </div>
        <% end %>

      </div>
      <div class="col-md-5 col-sm-5 col-xs-12 td-col-right">
        <%= render "devise/shared/links" %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
